<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting9_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.techkids.lab4.Setting9_2"
    android:orientation="vertical">

    <LinearLayout
        android:background="#17c9f5"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:scaleType="center"
            android:src="@drawable/ic_dehaze_black_24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="Settings"
            android:textSize="10pt"
            android:gravity="center|left"
            android:textColor="#FFFFFF"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textColor="#cac7c7"
            android:gravity="center|left"
            android:text="Switcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Switch
            android:checked="true"
            android:text="Flashlight"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Switch
            android:text="WiFi"
            android:checked="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:background="#cac7c7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textColor="#cac7c7"
            android:gravity="center|left"
            android:text="Radio Buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RadioButton
            android:checked="true"
            android:text="If this is turned on"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RadioButton
            android:checked="false"
            android:text="This one must be turned off"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:background="#cac7c7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textColor="#cac7c7"
            android:gravity="center|left"
            android:text="Volume Slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:gravity="center|left"
            android:text="If this is turned on"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <SeekBar
            android:foregroundGravity="center"
            android:progress="70"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/seekBar" />
    </RelativeLayout>

    <View
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="#cac7c7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



</LinearLayout>
