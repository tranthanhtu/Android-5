<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.techkids.youtubeapiv3.MainActivity">

    <EditText

        android:hint="Nháº­p ID Video"
        android:id="@+id/editTextIdVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <Button
        android:text="Play Video"
        android:layout_below="@id/editTextIdVideo"
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube"
        android:layout_below="@id/buttonPlay"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </com.google.android.youtube.player.YouTubePlayerView>

    <ListView
        android:layout_below="@id/youtube"
        android:id="@+id/lv_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</RelativeLayout>
