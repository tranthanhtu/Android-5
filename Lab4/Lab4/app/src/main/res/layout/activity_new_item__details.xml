<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_item__details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.techkids.lab4.NewItem_Details"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/item"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>
        <Button
            android:layout_margin="20dp"
            android:id="@+id/btn_backtomain"
            android:background="@drawable/ic_arrow_back_white_24dp"
            android:layout_alignParentLeft="true"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <Button
            android:layout_margin="20dp"
           android:background="@drawable/ic_share_white_24dp"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </RelativeLayout>

    <LinearLayout
        android:background="#2b3145"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            android:paddingLeft="20dp"
            android:textColor="#FFFFFF"
            android:textSize="11pt"
            android:gravity="center|left"
            android:text="Synth polaroid bitters chill\nwave pickled. Vegan disrupt!"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:textColor="#afa6a6"
            android:paddingLeft="20dp"
            android:text="19 Jul"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textSize="7pt"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:text="It was a humorously perilous business for both of us. For, before we proceed further, it must be said that the monkey-rope was fast at both ends; fast to Queequeg's broad canvas belt, and fast to my narrow leather one. So that for better or for worse, we two, for the time, were wedded; and should poor Queequeg sink to rise no more, then both usage and honour demanded, that instead of cutting the cord, it should drag me down in his wake. So, then, an elongated Siamese ligature united us. Queequeg was my own inseparable twin brother; nor could I any way get rid of the dangerous liabilities which the hempen bond entailed."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
