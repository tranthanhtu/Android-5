<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="70dp"
    android:paddingRight="70dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#03d9a7"
    tools:context="vn.techkids.lab5_demo.fragments.PaymentSuccessfulFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="#FFFFFF"
                android:textSize="15pt"
                android:gravity="center|left"
                android:text="Payment\nsuccessful"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="15pt"
                android:text="40,00 $"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:gravity="center|left"
                android:textColor="#FFFFFF"
                android:textSize="5pt"
                android:layout_weight="1"
                android:text="RECEPIENT"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:gravity="center|left"
                android:textSize="7pt"
                android:layout_weight="1"
                android:text="Lester Nygaard"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:gravity="center|left"
                android:textColor="#FFFFFF"
                android:textSize="5pt"
                android:layout_weight="1"
                android:text="NOTE"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:gravity="center|left"
                android:textSize="7pt"
                android:layout_weight="2"
                android:text="If was a humorously perilious\nbusiness for both of us."
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>



        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/ic_check_circle_black_24dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageView" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
