<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.techkids.lab5_demo.fragments.SettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#17c9f5"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:text="Settings"
                android:textSize="10pt"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView

                android:textColor="#cac7c7"
                android:gravity="center|left"
                android:text="Multiple selection"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:gravity="center|left"
                android:text="Notification ringtone"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView" />

            <TextView
                android:gravity="center|left"
                android:textColor="#cac7c7"
                android:text="Wilhelm scream"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:gravity="center|left"
                android:text="Favorites color"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView1" />

            <TextView
                android:gravity="center|left"
                android:textColor="#cac7c7"
                android:text="Yellow"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            android:background="#cac7c7"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="#cac7c7"
                android:gravity="center|left"
                android:text="Checkboxes"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <LinearLayout
            android:paddingLeft="15dp"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <CheckBox
                android:text="Apple juice"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <CheckBox
                android:checked="true"
                android:text="Orange Juice"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <CheckBox
                android:checked="true"
                android:text="Craft beer"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />


        </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            android:background="#cac7c7"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>



        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
