<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting9_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.techkids.lab4.Setting9_1">

    <LinearLayout
        android:background="#17c9f5"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:scaleType="center"
            android:src="@drawable/ic_dehaze_black_24dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="Settings"
            android:textSize="10pt"
            android:gravity="center|left"
            android:textColor="#FFFFFF"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:padding="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textColor="#cac7c7"
            android:gravity="center|left"
            android:text="Multiple selection"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            android:gravity="center|left"
            android:text="Notification ringtone"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/textView" />

        <TextView
            android:gravity="center|left"
            android:textColor="#cac7c7"
            android:text="Wilhelm scream"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            android:gravity="center|left"
            android:text="Favorites color"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/textView1" />

        <TextView
            android:gravity="center|left"
            android:textColor="#cac7c7"
            android:text="Yellow"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:background="#cac7c7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textColor="#cac7c7"
            android:gravity="center|left"
            android:text="Checkboxes"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <CheckBox
            android:text="Apple juice"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <CheckBox
            android:checked="true"
            android:text="Orange Juice"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <CheckBox
            android:checked="true"
            android:text="Craft beer"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />


    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:background="#cac7c7"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>




</LinearLayout>
